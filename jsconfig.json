{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src/",
		"checkJs": true,
		"jsx": "react"
	},
	"include": ["src"],
	"exclude": ["node_modules"],
	"javascript.autoClosingTags": false,
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	"files.associations": {
		"*.js": "javascriptreact"
    },
    "typeAcquisition": {
        "exclude": [ "dotenv" ]
    }
}
